<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".view.dashboard.contract.ContractFragment">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_margin"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    style="@style/DashboardHeaderH2"
                    android:text="@string/find_contract_via" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    style="@style/DashboardActionButton"
                    android:text="@string/find" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardViewBackground"
                android:layout_marginHorizontal="@dimen/default_margin"
                card_view:cardCornerRadius="@dimen/_3sdp"
                card_view:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:layout_marginVertical="@dimen/_8sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/contract_number" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/staff_in_charge" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/bod_in_charge" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/loan_profile_number" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/loan_type" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/date_created" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/money_to_loan" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DashboardTextContentNormal"
                                android:text="@string/phone_number" />

                            <com.google.android.material.textfield.TextInputEditText style="@style/DashboardEditTextFilter" />


                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/DashboardHeaderH2"
                android:layout_marginVertical="@dimen/_8sdp"
                android:layout_marginStart="@dimen/default_margin"
                android:text="@string/loan_contract_list" />

            <androidx.cardview.widget.CardView
                style="@style/DashboardCardViewBackground"
                android:layout_height="@dimen/_192sdp"
                android:layout_marginHorizontal="@dimen/default_margin"
                card_view:cardCornerRadius="@dimen/_3sdp"
                card_view:cardElevation="@dimen/_2sdp">

                <include layout="@layout/layout_loan_contract_list_table_header" />

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

        </LinearLayout>

    </ScrollView>


</layout>