<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BankManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">@color/secondaryText</item>
        <item name="colorControlHighlight">@color/secondaryText</item>

        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Alert Dialog -->
    <style name="Base.MaterialAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/secondary</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Base.Alert.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Base.Alert.NegativeButton</item>
    </style>

    <style name="Base.Alert.PositiveButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/onSecondary</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <style name="Base.Alert.NegativeButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Date Picker -->
    <style name="goTruck.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderToggleButton">@style/DatePicker.Header.ToggleButton</item>
    </style>

    <style name="DatePicker.Header.ToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>

    <!-- Parent Layout -->
    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="RootLayout.WrapHeight" parent="RootLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="RootLayout.WrapHeight.Padding" parent="RootLayout.WrapHeight">
        <item name="android:padding">@dimen/layout_padding_def</item>
    </style>

    <!-- Card View -->
    <style name="Base.MaterialCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardCornerRadius">@dimen/_4sdp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="cardElevation">@dimen/_4sdp</item>
    </style>

    <!-- Text View -->
    <style name="Base.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="TextAppearance.Primary" parent="Base.TextAppearance">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextAppearance.Secondary" parent="Base.TextAppearance">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- Text Input -->
    <style name="BaseTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="hintEnabled">true</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="errorTextAppearance">@style/TextAppearance.Primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="passwordToggleTint">@color/textPrimary</item>
        <item name="endIconTint">@color/textPrimary</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>

    <style name="BaseTextInput.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/textSecondary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="hintEnabled">true</item>
        <item name="errorTextAppearance">@style/TextAppearance.Primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="passwordToggleTint">@color/textPrimary</item>
        <item name="endIconTint">@color/textPrimary</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
    </style>

    <style name="TextInput.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
    </style>

    <style name="TextInput.Layout.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="endIconTint">@color/onSurface</item>
        <item name="endIconMode">dropdown_menu</item>
    </style>

    <style name="TextInput.AutoComplete.Dropdown" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:inputType">none</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Button -->
    <style name="Base.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="MaterialButton.Accent" parent="Base.MaterialButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="iconTint">@color/onPrimary</item>
    </style>

    <style name="MaterialButton.Secondary" parent="Base.MaterialButton">
        <item name="backgroundTint">@color/secondary</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="iconTint">@color/onSecondary</item>
    </style>

    <style name="MaterialButton.Negative" parent="Base.MaterialButton">
        <item name="backgroundTint">@color/divider</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="iconTint">@color/textSecondary</item>
    </style>

    <style name="MaterialButton.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/_8sdp</item>
        <item name="android:minHeight">@dimen/_8sdp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconTint">@color/onSurface</item>
        <item name="iconSize">@dimen/_16sdp</item>
        <item name="iconPadding">@dimen/_8sdp</item>
        <item name="iconGravity">start</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
    </style>

    <style name="MaterialButton.Icon" parent="MaterialButton.Text">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">@dimen/_8sdp</item>
        <item name="android:paddingRight">@dimen/_8sdp</item>
        <item name="android:minWidth">@dimen/_36sdp</item>
        <item name="android:minHeight">@dimen/_36sdp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/_12sdp</item>
    </style>

    <style name="ImageButton.ButtonBar" parent="Widget.AppCompat.ButtonBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Buttom Image-->
    <style name="Button.Image" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">@dimen/ic_img</item>
        <item name="android:layout_height">@dimen/ic_img</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Button.Image.Margin" parent="Button.Image">
        <item name="android:layout_margin">@dimen/_4sdp</item>
    </style>

    <style name="Button.Image.Big" parent="Button.Image.Margin">
        <item name="android:layout_width">@dimen/ic_img_L</item>
        <item name="android:layout_height">@dimen/ic_img_L</item>
    </style>

    <!-- Radio Button & Checkbox -->
    <style name="MaterialRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="buttonTint">@color/primary</item>
    </style>

    <style name="MaterialCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.Primary</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner" parent="Widget.AppCompat.Spinner">

    </style>

    <style name="Spinner.dropdown.notOverLap" parent="Spinner">
        <item name="android:background">@drawable/bg_spinner_border</item>
        <item name="android:popupBackground">@drawable/bg_spinner_item_border</item>
        <item name="overlapAnchor">false</item>
        <!--<item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>-->
        <item name="android:popupElevation">0dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <!-- Switch Material -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white</item>
    </style>
</resources>