<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextPoppins.Regular.Wrap" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextPoppins.Medium.Wrap" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextPoppins.Bold.Wrap" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextTitleH2SemiBold" parent="TextPoppins.SemiBold.Wrap">
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextTitleH2Regular" parent="TextPoppins.Regular.Wrap">
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="TextTitleH3Regular" parent="TextPoppins.Regular.Wrap">
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="TextPoppins.SemiBold.Wrap" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="WrapLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppRecyclerView" parent="WrapLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/secondaryBackground</item>
    </style>

    <style name="TextTime" parent="TextPoppins.SemiBold.Wrap">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="TextClockInHeader" parent="TextPoppins.Regular.Wrap">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="TextClockInData" parent="TextClockInHeader">
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="DashboardHeaderH2" parent="TextPoppins.SemiBold.Wrap">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="DashboardActionButton" parent="ButtonDefault">
        <item name="android:layout_height">@dimen/_13sdp</item>
        <item name="android:layout_width">@dimen/_41sdp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:paddingVertical" tools:targetApi="o">0dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:elevation">@dimen/_2sdp</item>
    </style>
    
    <style name="DashboardCardViewBackground">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DashboardTextContentNormal" parent="TextPoppins.Regular.Wrap">
        <item name="android:textSize">@dimen/H3</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="CreateProfileTextContentNormal" parent="DashboardTextContentNormal">
        <item name="android:textSize">@dimen/H4</item>
    </style>

    <style name="DashboardEditTextFilter">
        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_3sdp</item>
        <item name="android:background">@drawable/text_input_edittext_filter_bg</item>
    </style>

    <style name="CreateProfileEditText" parent="DashboardEditTextFilter">
        <item name="android:layout_width">@dimen/_135sdp</item>
    </style>

    <style name="DashboardSpinnerFilter" parent="DashboardEditTextFilter">
        <item name="android:layout_height">@dimen/_17sdp</item>
        <item name="android:background">@drawable/bg_spinner_border</item>
    </style>

    <style name="ContractListTableTextHeader" parent="DashboardTextContentNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/cornflower_blue</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ContractListTableTextItem" parent="ContractListTableTextHeader">
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/_1sdp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.Theme.BankManagement.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>